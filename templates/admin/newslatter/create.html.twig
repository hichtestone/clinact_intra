{% extends 'layout/app1.html.twig' %}
{% block title %}Intranet{% endblock %}
 {% block breadcrumb %}
     <div id="kt_toolbar_container" class="container-xxl d-flex flex-stack flex-wrap">
         <!--begin::Page title-->
         <div class="page-title d-flex flex-column me-3">
             <!--begin::Title-->
             <h1 class="d-flex text-white fw-bolder my-1 fs-3">{% if edit %} Modifier{% else %} Ajout{% endif%} journal</h1>
             <!--end::Title-->
             <!--begin::Breadcrumb-->
             <ul class="breadcrumb breadcrumb-separatorless fw-bold fs-7 my-1">
                 <!--begin::Item-->
                 <li class="breadcrumb-item text-white opacity-75">
                     <a href="{{ path('home') }}" class="text-white text-hover-primary">Home</a>
                 </li>
                 <!--end::Item-->
                 <!--begin::Item-->

                 <li class="breadcrumb-item">
                     <span class="bullet bg-white opacity-75 w-5px h-2px"></span>
                 </li>

                 <li class="breadcrumb-item text-white opacity-75">
                     <a href="{{ path('admin.newslatter.index') }}" class="text-white text-hover-primary">Liste journaux internes</a>
                 </li>

                 <li class="breadcrumb-item">
                     <span class="bullet bg-white opacity-75 w-5px h-2px"></span>
                 </li>
                 <!--end::Item-->
                 <!--begin::Item-->
                 <li class="breadcrumb-item text-white opacity-75">{% if edit %} Modifier{% else %}Ajout{% endif%} jounal</li>
                 <!--end::Item-->
             </ul>
         </div>

     </div>
 {% endblock %}
{% block body %}
    <div class="card">
        <div id="kt_content_container" class="d-flex flex-column-fluid align-items-start container-xxl">
            <div class="content flex-row-fluid" id="kt_content">
                <div class="card">
                    <div class="text-center mb-12" style="margin: 15px !important;">
                        <h5 class="fs-2hx text-dark mb-5" style="text-align: center!important;margin-top: 20px">{% if edit %} Modifier{% else %}Ajout d'un nouveau{% endif%}  journal :</h5>
                    </div>

                    <div class="card-body pt-0" id="webbinaire">
                        {{ form_start(form) }}
                        <div class="row">
                            <div class="col-lg-12 ">
                                <div class="mb-3">
                                    <label class="form-label" style="margin-bottom: 10px !important;">Titre<span class="text-danger">*</span></label>
                                    {{ form_widget(form.title) }}
                                    <div class="form-error" style="color: red">
                                        {{ form_errors(form.title) }}
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-12 "  style="margin-top: 15px!important;">
                                <div class="mb-3">
                                    <label class="form-label" style="margin-bottom: 10px !important;">Description<span class="text-danger">*</span></label>
                                    {{ form_widget(form.description) }}
                                    <div class="form-error" style="color: red">
                                        {{ form_errors(form.description) }}
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-12 " style="margin-top: 15px!important;">
                                <div class="mb-3">
                                    <label class="form-label" style="margin-bottom: 10px !important;">PDF<span class="text-danger">*</span></label>  <br>
                                    {{ form_widget(form.pdfFile) }}
                                    <div class="form-error" style="color: red">
                                        {{ form_errors(form.pdfFile) }}
                                    </div>
                                </div>
                            </div>


                        </div>
                        <div class="col-lg-12">
                            <div style="float: right" >
                                <button type="submit" class="btn btn btn-primary" style="margin-top: 5px">{% if edit %} Modifier{% else %} Enregistrer{% endif %}</button>
                            </div>
                        </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>


{% endblock %}