<table class="table table-responsive align-middle table-row-dashed fs-6 gy-5" id="kt_subscriptions_table">
    <thead>
    <tr class="text-start text-dark fw-bolder fs-7 text-uppercase gs-0">
        <th class="min-w-125px">Titre</th>
        <th class="min-w-125px">Description</th>
        <th class="min-w-125px">Date de creation</th>
        <th class="text-end min-w-70px">Actions</th>
    </tr>
    </thead>

    <tbody class="text-gray-600 fw-bold">
    {% for new in news %}

        <tr>
            <td>
                <a href="{{ path('admin.newslatter.show', {'id': new.id}) }}" class=" text-gray-800 text-hover-primary mb-1 showPDF" data-bs-toggle="modal" data-bs-target="#showPDFModal"> {{new.title? new.title : '' }}</a>
            </td>
            <td>
                {{ new.description ? new.description|raw : '' }}
            </td>

            <td>{{ new.createdAt? new.createdAt|date('d-m-Y') : '' }}</td>

            <td class="text-end">
                <a href="#" class="btn btn-light btn-active-light-primary btn-sm" data-kt-menu-trigger="click" data-kt-menu-placement="bottom-end">Actions
                    <span class="svg-icon svg-icon-5 m-0">
														<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none">
															<path d="M11.4343 12.7344L7.25 8.55005C6.83579 8.13583 6.16421 8.13584 5.75 8.55005C5.33579 8.96426 5.33579 9.63583 5.75 10.05L11.2929 15.5929C11.6834 15.9835 12.3166 15.9835 12.7071 15.5929L18.25 10.05C18.6642 9.63584 18.6642 8.96426 18.25 8.55005C17.8358 8.13584 17.1642 8.13584 16.75 8.55005L12.5657 12.7344C12.2533 13.0468 11.7467 13.0468 11.4343 12.7344Z" fill="black" />
														</svg>
													</span>
                </a>
                <div class="menu menu-sub menu-sub-dropdown menu-column menu-rounded menu-gray-600 menu-state-bg-light-primary fw-bold fs-7 w-125px py-4" data-kt-menu="true">
                    <div class="menu-item px-3">
                        <a href="{{ path('admin.newslatter.edit', {'id': new.id}) }}" class="menu-link px-3">Modifier</a>
                    </div>
                    {% if new.deletedAt==null %}
                        <div class="menu-item px-3">
                            <a href="{{ path('admin.newslatter.archive', {'id': new.id}) }}" data-kt-subscriptions-table-filter="delete_row" class="menu-link px-3">Archiver</a>
                        </div>
                    {% else %}
                        <div class="menu-item px-3">
                            <a href="{{ path('admin.newslatter.desarchive', {'id': new.id}) }}" data-kt-subscriptions-table-filter="delete_row" class="menu-link px-3">Restaurer</a>
                        </div>
                    {% endif %}
                </div>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>
