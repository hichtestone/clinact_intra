{% block body %}
    <div class="content flex-row-fluid" id="kt_content">
        <!--begin::Card-->
        <div class="card">
            <div class="card-toolbar" style="margin: 15px !important;">
                <!--begin::Toolbar-->
                <div class="d-flex justify-content-end" data-kt-user-table-toolbar="base">
                    <!--begin::Add user-->
                    <button onclick="window.location.href='{{ path('admin.presedentword.new') }}'" type="button" class="btn btn-primary" >
                        <!--begin::Svg Icon | path: icons/duotune/arrows/arr075.svg-->
                        <span class="svg-icon svg-icon-2">
                                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none">
                                    <rect opacity="0.5" x="11.364" y="20.364" width="16" height="2" rx="1" transform="rotate(-90 11.364 20.364)" fill="black"></rect>
                                    <rect x="4.36396" y="11.364" width="16" height="2" rx="1" fill="black"></rect>
                                </svg>
                            </span>
                        <!--end::Svg Icon-->Ajouter
                    </button>
                    <!--end::Add user-->
                </div>
            </div>
            <h5 class="fs-2hx text-dark mb-5" style="text-align: center!important;margin-top: 20px; text-transform: uppercase">Liste des Mots de président :</h5>
            <!--begin::Card header-->
            <div class="card-header border-0 pt-6">
                <!--begin::Card title-->
                <div class="card-title">
                    <!--begin::Search-->
                    <div class="d-flex align-items-center position-relative my-1">
                        <!--begin::Svg Icon | path: icons/duotune/general/gen021.svg-->
                        <span class="svg-icon svg-icon-1 position-absolute ms-6">
                            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none">
                                <rect opacity="0.5" x="17.0365" y="15.1223" width="8.15546" height="2" rx="1" transform="rotate(45 17.0365 15.1223)" fill="black"></rect>
                                <path d="M11 19C6.55556 19 3 15.4444 3 11C3 6.55556 6.55556 3 11 3C15.4444 3 19 6.55556 19 11C19 15.4444 15.4444 19 11 19ZM11 5C7.53333 5 5 7.53333 5 11C5 14.4667 7.53333 17 11 17C14.4667 17 17 14.4667 17 11C17 7.53333 14.4667 5 11 5Z" fill="black"></path>
                            </svg>
                        </span>
                        <!--end::Svg Icon-->
                        <input type="text" id="search" data-kt-subscription-table-filter="search" class="form-control form-control-solid w-250px ps-14" placeholder="Filter par mots clé..." style="margin-right: 2em"/>

                        <input class="form-control form-control-solid ps-12 flatpickr-input active"  id="searchByDate"  type="date"  placeholder="Select a date" />

                    </div>
                    <!--end::Search-->
                </div>
            </div>
            <!--end::Card header-->
            <!--begin::Card body-->
            <div class="card-body pt-0">
                <!--begin::Table-->
                <div id="kt_table_users_wrapper" class="dataTables_wrapper dt-bootstrap4 no-footer">
                    <div class="table-responsive" id="presedentword">
                        <table class="table align-middle table-row-dashed fs-6 gy-5 dataTable no-footer" id="kt_table_users">
                            <!--begin::Table head-->
                            <thead>
                            <!--begin::Table row-->
                            <tr class="text-start text-muted fw-bolder fs-7 text-uppercase gs-0">
                                <th class="w-10px pe-2 sorting_disabled" rowspan="1" colspan="1" aria-label="" style="width: 29.25px;">
                                    <div class="form-check form-check-sm form-check-custom form-check-solid me-3">
                                        <input class="form-check-input" type="checkbox" data-kt-check="true" data-kt-check-target="#kt_table_users .form-check-input" value="1">
                                    </div>
                                </th>
                                <th class="min-w-125px sorting" tabindex="0" aria-controls="kt_table_users" rowspan="1" colspan="2" aria-label="User: activate to sort column ascending" style="width: 257.297px;">Objet</th>
                                <th class="min-w-125px sorting" tabindex="0" aria-controls="kt_table_users" rowspan="1" colspan="1" aria-label="Role: activate to sort column ascending" style="width: 145.156px;">Contenu</th>
                                <th class="min-w-125px sorting" tabindex="0" aria-controls="kt_table_users" rowspan="1" colspan="1" aria-label="Last login: activate to sort column ascending" style="width: 145.156px;">Date de création</th>
                                <th class="text-end min-w-100px sorting_disabled" rowspan="1" colspan="1" aria-label="Actions" style="width: 113.438px;">Actions</th>
                            </tr>
                            <!--end::Table row-->
                            </thead>
                            <!--end::Table head-->
                            <!--begin::Table body-->
                            <tbody class="text-gray-600 fw-bold">
                            {% for word in words %}
                            <tr class="{% if loop.index % 2==0 %}odd{% else %}even{% endif %}">
                                <!--begin::Checkbox-->
                                <td>
                                    <div class="form-check form-check-sm form-check-custom form-check-solid">
                                        <input class="form-check-input" type="checkbox" value="{{ word.id }}">
                                    </div>
                                </td>
                                <!--end::Checkbox-->

                                <!--end::User=-->
                                <!--begin::Role=-->
                                <td class="d-flex align-items-center">
                                    <div class="symbol symbol-circle symbol-50px overflow-hidden me-3">

                                        <div class="symbol-label">
                                            <img src="{{ asset('images/presedentWord/'~word.fileName) }}" alt="{{ word.object }}" class="w-100" />
                                        </div>

                                    </div>
                                </td>
                                <td>{{ word.object }}</td>
                                <!--end::Role=-->
                                <!--begin::Last login=-->
                                <td data-order="2021-12-14T11:33:06+01:00">
                                    <div class="badge badge-light fw-bolder">{{ word.content|raw }}</div>
                                </td>

                                <td data-order="2021-02-21T22:10:00+01:00">{{ word.createdAt|date('d-m-Y') }}</td>


                                <td class="text-end">
                                    <a href="#" class="btn btn-light btn-active-light-primary btn-sm" data-kt-menu-trigger="click" data-kt-menu-placement="bottom-end">Actions
                                        <!--begin::Svg Icon | path: icons/duotune/arrows/arr072.svg-->
                                        <span class="svg-icon svg-icon-5 m-0">
														<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none">
															<path d="M11.4343 12.7344L7.25 8.55005C6.83579 8.13583 6.16421 8.13584 5.75 8.55005C5.33579 8.96426 5.33579 9.63583 5.75 10.05L11.2929 15.5929C11.6834 15.9835 12.3166 15.9835 12.7071 15.5929L18.25 10.05C18.6642 9.63584 18.6642 8.96426 18.25 8.55005C17.8358 8.13584 17.1642 8.13584 16.75 8.55005L12.5657 12.7344C12.2533 13.0468 11.7467 13.0468 11.4343 12.7344Z" fill="black"></path>
														</svg>
													</span>
                                        <!--end::Svg Icon-->
                                    </a>
                                    <!--begin::Menu-->
                                    <div class="menu menu-sub menu-sub-dropdown menu-column menu-rounded menu-gray-600 menu-state-bg-light-primary fw-bold fs-7 w-125px py-4" data-kt-menu="true">
                                        <!--begin::Menu item-->
                                        <div class="menu-item px-3">
                                            <a href="{{ path('admin.presedentword.edit',{'id':word.id }) }}" class="menu-link px-3">
                                                    Modifier
                                              </a>
                                        </div>
                                        <div class="menu-item px-3">
                                            {% if word.deletedAt==null %}
                                                <a  href="{{ path('admin.presedentword.archive', {'id': word.id}) }}" class="menu-link px-3">
                                                    Archiver
                                                </a>
                                            {% else %}
                                                <a href="{{ path('admin.presedentword.desarchive', {'id': word.id}) }}" class="menu-link px-3">
                                                    desarchiver
                                                </a>
                                            {% endif %}

                                        </div>
                                    </div>
                                </td>
                            </tr>
                            {% endfor %}

                            </tbody>
                        </table>
                    </div>

                </div>
                <!--end::Table-->
            </div>
            <!--end::Card body-->
        </div>
        <!--end::Card-->
    </div>
{% endblock %}

{% block javascripts %}

    <script>
        jQuery(document).ready(function() {
            console.log('dd');
            var searchRequest = null;
            $("#search").keyup(function() {
                var minlength = 0;
                var that = this;
                var value = $(this).val();
                if (value.length >= minlength ) {
                    if (searchRequest != null)
                        searchRequest.abort();
                    searchRequest = $.ajax({
                        type: "GET",
                        url: "{{ path('admin.presedentword.filter.index') }}",
                        data: {
                            'q' : value
                        },
                        dataType: "text",
                        success: function(msg){
                            //we need to check if the value is the same
                            if (value==$(that).val() ) {
                                $("#presedentword").html(msg);
                            }
                        }
                    });
                }
            });



            $("#searchByDate").on('change',function () {
                var minlength = 0;
                var that      = this;
                var value     = $(that).val();
                if (value.length >= minlength){
                    if (searchRequest != null)
                        searchRequest.abort();
                    searchRequest = $.ajax({
                        type: "GET",
                        url: "{{ path('ajax.presedentword.search.date') }}",
                        dataType: "text",
                        data: {
                            'q' : value
                        },
                        success: function (data){
                            if (value == $(that).val()){
                                $("#presedentword").html(data);
                            }
                        }
                    });
                }
            });

        });
    </script>
{% endblock %}